<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#498083"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:id="@+id/calendar_popup">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Price"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarDate" />

    <TextView
        android:id="@+id/tabelulMeuPrice"
        android:layout_width="129dp"
        android:layout_height="674dp"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tabelulMeuItems"
        android:layout_width="136dp"
        android:layout_height="681dp"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tabelulMeuCategory"
        android:layout_width="127dp"
        android:layout_height="670dp"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tabelulMeuPrice"
        app:layout_constraintStart_toEndOf="@+id/tabelulMeuItems"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/calendarDate"
        android:layout_width="213dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="134dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Items"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarDate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Category"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/calendarDate" />




</androidx.constraintlayout.widget.ConstraintLayout>