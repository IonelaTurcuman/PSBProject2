<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/step1TextView"
        android:layout_width="64dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Step 1. "
        android:textColor="#000000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <EditText
        android:id="@+id/goalNameEditText"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Goal name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toEndOf="@+id/step1TextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/addNewGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="164dp"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalNameEditText"
        app:layout_constraintVertical_bias="0.293" />

    <TextView
        android:id="@+id/step2TextView"
        android:layout_width="64dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Step 2. "
        android:textColor="#000000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1TextView"
        app:layout_constraintVertical_bias="0.103" />

    <Spinner
        android:id="@+id/spinnerTextSize"
        android:layout_width="176dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toEndOf="@+id/step2TextView"
        app:layout_constraintTop_toBottomOf="@+id/goalNameEditText"
        app:layout_constraintVertical_bias="0.08" />

    <EditText
        android:id="@+id/sumToSaveEditText"
        android:layout_width="172dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Insert amount of money to save"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/step3TextView"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTextSize"
        app:layout_constraintVertical_bias="0.091" />

    <TextView
        android:id="@+id/step3TextView"
        android:layout_width="64dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Step 3. "
        android:textColor="#000000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step2TextView"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/step4TextView"
        android:layout_width="64dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="Step 4. "
        android:textColor="#000000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step3TextView"
        app:layout_constraintVertical_bias="0.137" />

    <EditText
        android:id="@+id/daysEditText"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Number of days"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toEndOf="@+id/step4TextView"
        app:layout_constraintTop_toBottomOf="@+id/sumToSaveEditText"
        app:layout_constraintVertical_bias="0.121" />

</androidx.constraintlayout.widget.ConstraintLayout>